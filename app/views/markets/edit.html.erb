<section class="form-create">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <a href="<%= url_for(:back) %>" class="btn-back"><i class="fas fa-arrow-left"></i> <%= t('markets.form.back') %></a>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h1 class="title"><%= t('markets.form.edit') %></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-5">
		<%= form_for @market, url: { action: 'update' , id: @market.id }, method: :put do |f| %>
		    <%= render partial: 'form', locals: { f: f } %>
                <% end %>
            </div>
        </div>
    </div>
</section>
