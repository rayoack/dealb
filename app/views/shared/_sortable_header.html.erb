<th style="<%= style ||= '' %>">
  <% if order.present? && order == 'DESC' && params[:type] == type %>
    <%= link_to label, params.permit!.merge(order: 'ASC', type: type),
                       class: 'sortable-header' %>
    <i class="fas fa-chevron-up"></i>
  <% elsif params[:type] == type %>
    <%= link_to label, params.permit!.merge(order: 'DESC', type: type),
                       class: 'sortable-header' %>
    <i class="fas fa-chevron-down"></i>
  <% else %>
    <%= link_to label, params.permit!.merge(order: 'DESC', type: type),
                       class: 'sortable-header' %>
    <i class="fas fa-arrows-alt-v"></i>
  <% end %>
</th>
