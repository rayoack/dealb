<%= render partial: 'shared/header' %>

<section class="s-title-page title-page-search">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-7">
                <a href="#" class="btn-back">
                    <img src="/img/seta-esq-back.svg" alt="">
                    back
                </a>
                <h1>Search Result for “<%= params[:query] %>”</h1>
            </div>
        </div>
    </div>
</section>
<section class="filter-block">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="container-filter">
                    <h3><img src="/img/seta-baixo.svg" alt=""> Filter Companies</h3>
                    <a href="#"><img src="/img/add.svg" alt=""> Add filter company</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="s-table-results">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <p class="results">380 of 1000 results</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6">
                <a href="#" class="btn-export">
                    <img src="/img/export.svg" alt="">
                    Export your results
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Location</th>
                                <th colspan="2">Deals</th>
                            </tr>
                        </thead>
                        <tbody>
			    <% @results.each do |result| %>
				<tr>
                                    <td><img src="/img/logo-investors.png" alt=""> <%= result.name %></td>
                                    <td class="status-active"><span class="circulo"></span> <%= result.try(:status) %></td>
                                    <td><%= result.locations.pluck(:city, :region, :country).join(', ') %></td>
                                    <td><%= result.try(:investor).try(:category) %></td>
                                    <td><a href="<%= "/#{result.class.to_s.downcase.pluralize}/#{result.permalink}" %>"><img src="/img/seta-dir.svg" alt=""></a></td>
				</tr>
			    <% end %>
                        </tbody>
                    </table>
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next" class="next">
                                <span aria-hidden="true">next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>

<%= render partial: 'shared/footer' %>
