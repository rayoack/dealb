<%= render partial: 'shared/header' %>

<section class="s-title-page">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-7">
                <h1>Deals</h1>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-5">
                <h2><%= @deals.count %> Deals</h2>
                <a href="/deals/new">Create new</a>
            </div>
        </div>
    </div>
</section>
<section class="filter-block">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="container-filter">
                    <h3><img src="/img/seta-baixo.svg" alt=""> Filter Deals</h3>
                    <div class="filter-result">
                        <div class="filter-complete">
                        </div>
                        <button class="add-new-filter"><img src="/img/img-new-filter.svg" alt="" data-toggle="modal" data-target="#modalFilter"></button>
                        <button class="btn-app-filter">Apply Filter</button>
                    </div>
                    <div class="filter-empty">
                        <a href="#" class="btn-add-filter-modal" data-toggle="modal" data-target="#modalFilter"><img src="/img/add.svg" alt=""> Add filter deal</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="s-table-results">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <p class="results"><%= page_entries_info @deals_paginated %></p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6">
                <a href="#" class="btn-export">
                    <img src="/img/export.svg" alt="">
                    Export your results
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
		<%= render partial: 'shared/flash_messages' %>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Company <img src="/img/filter.svg" alt=""></th>
                                <th>Close Date <img src="/img/filter.svg" alt=""></th>
                                <th>Deal Type <img src="/img/filter.svg" alt=""></th>
                                <th>Investors <img src="/img/filter.svg" alt=""></th>
                                <th>Amount <img src="/img/filter.svg" alt=""></th>
                            </tr>
                        </thead>
                        <tbody>
			    <% @deals_paginated.each do |deal| %>
				<tr>
                                    <td><img src="/img/logo-investors.png" alt=""> <%= deal.company.name %></td>
                                    <td><%= deal.close_date %></td>
                                    <td><%= deal.category %></td>
                                    <td><%= deal.deal_investors.map(&:investor).map(&:name).join(', ') %></td>
                                    <td><%= number_to_currency(deal.amount, unit: "#{deal.amount_currency} ") %></td>
				</tr>
			    <% end %>
                        </tbody>
                    </table>
                </div>

                <%= paginate @deals_paginated %>
            </div>
        </div>
    </div>
</section>

<%= render partial: 'shared/footer' %>

