<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
          xmlns:o="urn:schemas-microsoft-com:office:office"
          xmlns:x="urn:schemas-microsoft-com:office:excel"
          xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
          xmlns:html="http://www.w3.org/TR/REC-html40">
    <Worksheet ss:Name="Sheet1">
	<Table>
	    <Row>
		<Cell><Data ss:Type="String"><%= t('deals.index.column_company') %></Data></Cell>
		<Cell><Data ss:Type="String"><%= t('deals.index.column_close_date') %></Data></Cell>
		<Cell><Data ss:Type="String"><%= t('deals.index.column_deal_type') %></Data></Cell>
		<Cell><Data ss:Type="String"><%= t('deals.index.column_investors') %></Data></Cell>
		<Cell><Data ss:Type="String"><%= t('deals.index.column_amount') %></Data></Cell>
	    </Row>
	    <% @deals.each do |deal| %>
		<Row>
		    <Cell><Data ss:Type="String"><%= deal.company.name %></Data></Cell>
		    <Cell><Data ss:Type="String"><%= deal.close_date %></Data></Cell>
		    <Cell><Data ss:Type="String"><%= deal.category %></Data></Cell>
		    <Cell><Data ss:Type="String"><%= deal.deal_investors.map(&:investor).map(&:name).join(', ') %></Data></Cell>
		    <Cell><Data ss:Type="String"><%= format_amount(deal.amount, deal.amount_currency) %></Data></Cell>
		</Row>
	    <% end %>
	</Table>
    </Worksheet>
</Workbook>
