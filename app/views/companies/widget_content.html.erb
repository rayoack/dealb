<script>
  (function() {
    /* Libraries */
    var axios_tag = document.createElement('script');
    axios_tag.setAttribute('type','text/javascript');
    axios_tag.setAttribute('src', 'https://unpkg.com/axios/dist/axios.min.js');

    var modal_tag = document.createElement('script');
    modal_tag.setAttribute('type', 'text/javascript');
    modal_tag.setAttribute('src', 'https://cdnjs.cloudflare.com/ajax/libs/tingle/0.14.0/tingle.min.js');

    var modal_css = document.createElement('link');
    modal_css.setAttribute('rel', 'stylesheet');
    modal_css.setAttribute('href', 'https://cdnjs.cloudflare.com/ajax/libs/tingle/0.14.0/tingle.min.css');

    document.documentElement.appendChild(axios_tag);
    document.documentElement.appendChild(modal_tag);
    document.documentElement.appendChild(modal_css);

    setTimeout(renderWidget, 200);

    /* Render modal and open buttons */
    function renderWidget() {
      var modal = new tingle.modal({
        footer: false,
        closeMethods: ['overlay'],
        cssClass: ['dealbook-modal'],
      });

      modal.setContent('<div class="dealbook-modal" id="dealbook-company-modal"> <div class="dealbook-modal__inner"> <div class="dealbook-modal__header"> Overview </div> <div class="dealbook-modal__content-test"> </div> <div class="dealbook-modal__content"> <div class="dealbook-miniprofile"> <div class="dealbook-miniprofile__img-col"> <img class="dealbook-miniprofile__img" src="<%= image_url %>"/> </div> <div class="dealbook-miniprofile__content-col"> <h3><%= name %></h3> <h4><%= location %></h4> <h4>Founded <%= born_at %></h4> </div> </div> <div class="dealbook-description"> <%= description %>  </div> <div class="dealbook-company"> <h4>Last Funding</h4> <%= last_funding_type %> </div> <div class="dealbook-funding"> <h4>Funding</h4> <%= last_funding_value %></div> </div> <div class="dealbook-modal__footer"> <a class="dealbook-footer__btn" href="http://dealbook-prod.herokuapp.com/companies/<%= permalink %>" target="_blank"> Ver perfil completo no DealBook </a> </div> </div> </div>');

      modal.open();
    }
  })();
</script>

