<% @page_title = "Dealbook - Import CSV"%>

<section class="form-create">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <a href="<%= url_for(:back) %>" class="btn-back"><i class="fas fa-arrow-left"></i> <%= t('companies.show.back') %></a>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <h1 class="title">Import data from CSV</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-5">
        <%= form_with url: '/companies/csvimport', multipart: true do %>
            <div class="form-group">
                <%= label :csv, "Upload CSV File" %>
                <%= file_field(:csv, 'File') %>
            </div>

            <div class="form-group">
                <%= label :import_type, "Import type" %>
                <%= select( :import, :import_type,
                    [['Company','company'],['Investors','investor'],['Deals','deal']],
                    { 
                      title: t('Import type') }) %>
            </div>
            
            <%= button_to("Upload csv") %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-7">
        <div class="text-featured">
          <h1></h1>
          <p></p>
          <img src="/img/img-featured-company.png" alt="">
        </div>
      </div>
    </div>
  </div>
</section>
