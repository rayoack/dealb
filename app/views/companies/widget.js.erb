(function() {
  renderWidget();

  /* Render modal and open buttons */
  function renderWidget() {
    var showFooter = "<%= footer %>" == 'true';
    var modal = new tingle.modal({
      footer: showFooter,
      closeMethods: ['overlay'],
      cssClass: ['dealbook-modal'],
    });

      modal.setContent('<div class="dealbook-modal" id="dealbook-company-modal"> <div class="dealbook-modal__inner"> <div class="dealbook-modal__header"> Overview </div> <div class="dealbook-modal__content-test"> </div> <div class="dealbook-modal__content"> <div class="dealbook-miniprofile"> <div class="dealbook-miniprofile__img-col"> <img class="dealbook-miniprofile__img" src="<%= image_url || "" %>"/> </div> <div class="dealbook-miniprofile__content-col"> <h3><%= name %></h3> <h4><%= location %></h4> <h4><%= t("widget.founded") %> <%= born_at %></h4> </div> </div> <div class="dealbook-description"> <%= description %>  </div> <div class="dealbook-company"> <% if last_funding_type.present? %> <h4><%= t("widget.last_funding") %></h4> <%= last_funding_type %> <% end %> </div> <div class="dealbook-funding"> <% if last_funding_value.present? %> <h4><%= t("widget.value") %></h4> <%= "$#{last_funding_value}" %> <% end %> </div> </div> <div class="dealbook-modal__footer"> <a class="dealbook-footer__btn" href="https://dealbook-prod.herokuapp.com/companies/<%= permalink %>" target="_blank"> <%= t("widget.full_profile") %></a> </div> </div> </div>');

    if (showFooter) {
      modal.addFooterBtn("<%= t('companies.show.copy_code') %>",
                            'tingle-btn tingle-btn--primary',
                            function() {
        navigator.clipboard.writeText('<%= widget_content %>');
      });
    }

    modal.open();
  }
})();
