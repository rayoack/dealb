<% if @company.person_companies.any? %>
    <div class="item investors">
	<h1><img src="/img/people.svg" alt=""> People</h1>
	<div class="table-responsive">
            <table class="table">
		<thead>
                    <tr>
			<th>Full Name</th>
			<th>Job Title</th>
			<th colspan="2">Company</th>
                    </tr>
		</thead>
		<tbody>
		    <% @company.person_companies.select(:person_id, :job_title).distinct.each do |person_company| %>
			<tr>
			    <td><img src="/img/photo-people.png" alt=""><strong> <%= person_company.person.name %></strong></td>
			    <td><%= person_company.job_title %></td>
			    <td><%= @company.name %></td>
			    <td><a href="/people/<%= person_company.person.permalink %>">View profile</a></td>
			</tr>
		    <% end %>
		</tbody>
            </table>
	</div>
    </div>
<% end %>
