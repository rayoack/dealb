  <h1 class="title-accordion"><img src="/img/investments.svg" alt=""> <%= t('people.show.deals.investments') %></h1>
<% if @deals.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t('people.show.deals.close_date') %></th>
          <th><%= t('people.show.deals.company') %></th>
          <th><%= t('people.show.deals.deal_type') %></th>
          <th><%= t('people.show.deals.round') %></th>
          <th><%= t('people.show.deals.amount') %></th>
          <th><%= t('people.show.deals.pre_money') %></th>
          <th style="width: 25px;"></th>
        </tr>
      </thead>
      <tbody>
        <% @deals.each do |deal| %>
          <tr>
            <td><strong><%= I18n.l(deal.close_date, format: :default) %></strong></td>
            <td><a href="/companies/<%= deal.company.permalink %>" style="float: none;"><%= deal.company.name %></a></td>
            <td><%= I18n.t("deals.model.categories.#{deal.category}") %></td>
            <td><%= deal.round ? I18n.t("deals.form.rounds.#{deal.round}") : t("empty_state") %></td>
            <td><%= format_amount(deal.amount, deal.amount_currency) %></td>
            <td><%= format_amount(deal.pre_valuation, deal.amount_currency) %></td>
            <td>
              <a href="/deals/<%= deal.id %>">
                <i class="fas fa-arrow-right"></i>
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="table-card">
    <%= t("empty_state") %>
  </div>
<% end %>
