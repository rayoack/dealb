<div style="padding: 10px; display: flow-root; box-shadow: 1px 4px 10px lightgrey; margin: 10px 0; margin-bottom: 20px;">
  <div class="form-group">
    <%= f.select( :company_id, 
                        @companies.collect { |c| [c.name, c.id] },
                        { prompt: t('people.form.select_company') },
                        class: 'select2',
                        data: { label: t('deals.form.select_company') },
                        multiple: false ) %>
  </div>
  <div class="form-group">
    <%= f.text_field :job_title, placeholder: t('people.form.occupation') %>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>
</div>