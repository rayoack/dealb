<section class="top-section">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <a href="<%= url_for(:back) %>" class="btn-back">
          <img src="/img/seta-esq-back.svg" alt="">
          <%= t('people.show.back') %>
        </a>
        <% if user_signed_in? %>
          <a href="/people/<%= @person.permalink %>/edit" class="btn-edit-page"> <img src="/img/edit.svg">
            <%= t('people.show.edit') %>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</section>
<section class="s-detail-people">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="details">
          <div class="people">
            <div style="margin-right: 20px; float: left;">
              <img src="<%= @person.profile_image_url || '/img/avatar.png' %>"
                   class="img-responsive profile-img__md">
            </div>
            <div class="text">
              <h1><%= @person.name %></h1>
              <span><%= @person.occupation %></span>
            </div>
          </div>
          <div class="location">
            <img src="/img/location.svg" alt="">
            <span><%= @person.locations.pluck(:city, :country).map { |c| c.join(', ') }.join('/ ') %></span>
          </div>
          <div class="site">
            <img src="/img/site.svg" alt="">
            <a href="<%= @person.website_url %>" target="_blank"><%= @person.website_url %></a>
          </div>
          <% if @person.investor %>
            <div class="categorie">
              <span><%= t('people.show.category') %></span>
              <span class="name-categorie"><%= investor_category(@person) %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="details-gerals">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-3">
        <div class="description">
          <h1>
            <img src="/img/person-details.svg" alt="">
            <%= t('people.show.details') %>
          </h1>
          <p><%= @person.description %></p>
          <ul class="info-contact">
            <li>
              <p>
                <strong><%= t('people.show.status') %>:</strong>
                <%= @person.verified_at? ? t('people.show.statuses.verified') : t('people.show.statuses.unverified') %>
              </p>
            </li>
            <li>
              <p>
                <strong><%= t('people.show.born') %>:</strong> 
                <%= @person.born_on ? I18n.l(@person.born_on, format: :default) : '' %>
              </p>
            </li>
            <li>
              <p>
                <strong><%= t('people.show.gender') %>:</strong>
                <%= @person.gender ? I18n.t("filters.labels.gender.#{@person.gender}") : '' %>
              </p>
            </li>
          </ul>
          <div class="social">
            <h1><%= t('people.show.media') %></h1>

            <% if @person.social_media? %>
              <ul>
                <% if @person.facebook_url %>
                  <li>
                    <a href="<%= @person.facebook_url %>" target="_blank">
                      <img src="/img/facebook-colorido.svg" alt="">
                    </a>
                  </li>
                <% end %>

                <% if @person.twitter_url %>
                  <li>
                    <a href="<%= @person.twitter_url %>" target="_blank">
                      <img src="/img/twitter-colorido.svg" alt="">
                    </a>
                  </li>
                <% end %>

                <% if @person.google_plus_url %>
                  <li>
                    <a href="<%= @person.google_plus_url %>" target="_blank">
                      <img src="/img/google-colorido.svg" alt="">
                    </a>
                  </li>
                <% end %>

                <% if @person.linkedin_url %>
                  <li>
                    <a href="<%= @person.linkedin_url %>" target="_blank">
                      <img src="/img/linkedin-colorido.svg" alt="">
                    </a>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <%= t('investor.show.media_empty') %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-9">
        <div class="tables-info-company">
          <% if @deals.any? %>
            <%= render partial: 'people/show/investiments' %>
          <% end %>

          <% if @person.person_companies.any? %>
            <%= render partial: 'people/show/companies' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
