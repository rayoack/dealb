<section class="s-title-page">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-7">
        <h1><%= t('people.index.people') %></h1>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-5">
        <h2><%= @people.count %> <%= t('people.index.people') %></h2>
        <a href="/people/new"><%= t('people.index.new') %></a>
      </div>
    </div>
  </div>
</section>

<%= render partial: 'filters' %>

<section class="s-table-results">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6">
        <p class="results">
          <%= page_entries_info @people_paginated, entry_name: t('people.index.display') %>
        </p>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <a href="/people.xlsx" class="btn-export">
          <img src="/img/export.svg" alt="">
          <%= t('people.index.export') %>
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= render partial: 'shared/flash_messages' %>

        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <%= render 'shared/sortable_header', url: people_path,
                                                     label: t('people.index.column_name'),
                                                     type: 'first_name',
                                                     order: params[:order] %>

                <%= render 'shared/sortable_header', url: people_path,
                                                     label: t('people.index.column_occupation'),
                                                     type: 'occupation',
                                                     order: params[:order] %>
                <th><%= t('people.index.column_local') %> </th>
                <th colspan="2"><%= t('people.index.column_company') %> </th>
              </tr>
            </thead>

            <tbody>
              <% @people_paginated.each do |person| %>
                <tr class="clickable-row" data-href=<%= "/people/#{person.permalink}" %>>
                  <td>
                    <img src="<%= person.profile_image_url || "/img/photo-people.png" %>" alt="">
                    <%= person.name %>
                  </td>
                  <td><%= person.occupation %></td>
                  <td><%= person.locations_plain %></td>
                  <td>
                    <div class="row">
                      <div class="col-md-3">
                        <img src="/img/companies.svg" alt="">
                      </div>
                      <div class="col-md-9">
                        <strong><%= latest_company(person) %></strong>
                      </div>
                    </div>
                  </td>
                  <td><a href="/people/<%= person.permalink %>"><img src="/img/seta-dir.svg" alt=""></a></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= paginate @people_paginated %>
      </div>
    </div>
  </div>
</section>
